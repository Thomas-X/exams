doctype html
html(lang="en")
    head
        block head
            // Required meta tags
            meta(charset="utf-8")
            meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
            link(rel='stylesheet' href='/stylesheets/style.css')
            // Bootstrap CSS
            link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
            title=title
    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light.fixed-top
            a.navbar-brand(href="#") nodejs-login-boilerplate
            button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
                span.navbar-toggler-icon
            #navbarNav.collapse.navbar-collapse
                ul.navbar-nav
                    li(class='nav-item')
                        a.nav-link(href="/")
                            | Home
                    li(class=(Object.keys(activeLinks).indexOf('/account/login') !== -1 ? 'nav-item active' : 'nav-item'))
                        a.nav-link(href="/account/login") Login
                    li(class=(Object.keys(activeLinks).indexOf('/account/register') !== -1 ? 'nav-item active' : 'nav-item'))
                        a.nav-link(href="/account/register") Register

        block content

        // Optional JavaScript
        // jQuery first, then Popper.js, then Bootstrap JS
        script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous")

